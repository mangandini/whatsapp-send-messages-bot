<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- Optional: Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
<!-- Link to shared navbar CSS -->
<link rel="stylesheet" href="/css/navbar.css">


<!-- Bootstrap Navbar with mobile support -->
<nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
    <div class="container-fluid">
        <!-- Brand -->
        <a class="navbar-brand" href="/">
            <i class="bi bi-whatsapp text-success"></i>
            Whatsapp Bot
            <% if (locals.testMode === 'true') { %>
                <span class="badge bg-warning text-dark ms-2">Test Mode</span>
            <% } else { %>
                <span class="badge bg-success ms-2">Live</span>
            <% } %>
        </a>

        <!-- Hamburger Menu Button -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" 
                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Collapsible Content -->
        <div class="collapse navbar-collapse" id="navbarContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link <%- path === '/' ? 'active' : '' %>" 
                       href="/" aria-current="<%= path === '/' ? 'page' : 'false' %>">
                        <i class="bi bi-house-door-fill"></i> Home
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%- path === '/contacts' ? 'active' : '' %>"
                       href="/contacts" aria-current="<%= path === '/contacts' ? 'page' : 'false' %>">
                        <i class="bi bi-people-fill"></i> View Contacts
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%- path === '/messages' ? 'active' : '' %>"
                       href="/messages" aria-current="<%= path === '/messages' ? 'page' : 'false' %>">
                        <i class="bi bi-chat-left-text-fill"></i> Message History
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link <%- path === '/settings' ? 'active' : '' %>"
                       href="/settings" aria-current="<%= path === '/settings' ? 'page' : 'false' %>">
                        <i class="bi bi-gear-fill"></i> Settings
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav> 